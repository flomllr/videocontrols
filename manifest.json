{
	"manifest_version": 2,

	"name": "Video controls by flomllr",
	"description": "Universal video controls for any website",
	"version": "1.0",

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"browser_action": {
		"default_popup": "popup.html"
	},

	"permissions": [
		"activeTab"
	],

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"]
		}
	]
}
